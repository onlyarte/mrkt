type Category {
  id: ID! @id
  createdAt: DateTime! @createdAt
  name: String!
  description: String
  parent: Category
  items: [Item!]!
}

type Item {
  id: ID! @id
  createdAt: DateTime! @createdAt
  name: String!
  description: String!
  category: Category!
  price: Float!
}

type Wish {
  id: ID! @id
  createdAt: DateTime! @createdAt
  item: Item!
  user: User!
}

type User {
  id: ID! @id
  firstName: String!
  lastName: String!
  email: String! @unique
  password: String!
  wishes: [Wish!]!
}
